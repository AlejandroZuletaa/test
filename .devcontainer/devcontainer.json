{
  "name": "My Dev Environment",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "frontend", // O "backend", seg√∫n el servicio principal
  "workspaceFolder": "/app",
  "runServices": [
    "frontend",
    "backend"
  ],
  "features": {
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers-extra/features/angular-cli:2": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  },
  "forwardPorts": [
    3000,
    8000
  ],
  "postCreateCommand": "npm install",
  "remoteUser": "root"
}
