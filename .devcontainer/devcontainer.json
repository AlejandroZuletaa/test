{
  "name": "My Dev Environment",
  "dockerComposeFile": ["../docker-compose.yml"],
  "workspaceFolder": "/usr/src/app", // Establece el directorio de trabajo ra√≠z
  "service": "",
  "runServices": [
    "frontend", // Si deseas que se inicien ambos servicios
    "backend"
  ],
  "features": {
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers-extra/features/angular-cli:2": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": ["dbaeumer.vscode-eslint", "msjsdiag.debugger-for-chrome"]
    }
  },
  "forwardPorts": [4005, 4004],
  "postCreateCommand": "cd frontend && npm install && cd ../backend && npm install",
  "remoteUser": "root"
}

